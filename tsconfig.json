{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist/esm",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "module": "NodeNext",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./src",

    /* Path resolutions */
    "paths": {
      "code-surfer-types": ["./src/code-surfer-types"]
    }
  },
  "include": ["src"],
  "references": []
}
